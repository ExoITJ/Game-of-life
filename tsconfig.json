{
  "compilerOptions": {
    "target": "ES2018",
    "jsx": "react",
    "module": "ESNext",
    "baseUrl": "./",
    "paths": {
      "types/*": ["src/types/"],
      "components/*": ["src/common"],
      "@/*": ["src/*"]
    },
    "allowJs": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "declarations.d.ts"],
  "exclude": ["node_modules"]
}
